<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SoftwareShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
            <a asp-action="Index" asp-controller="Home" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none mr-3">
                <img class="mr-1" src="https://image.flaticon.com/icons/png/512/4229/4229359.png" alt="icon" width="30" height="30" />
                <span>Software market</span>
            </a>

            <ul class="nav nav-pills">
                <li class="nav-item"><a href="#" class="nav-link btn btn-outline-info mr-2" aria-current="page">Home</a></li>
                <li class="nav-item"><a href="#" class="nav-link btn btn-outline-info mr-2" aria-current="page">Market</a></li>
                <li class="nav-item"><a href="#" class="nav-link btn btn-outline-info mr-2" aria-current="page">Profile</a></li>
            </ul>
            
            <ul class="nav nav-pills">
                <li class="nav-item"><a href="#" class="nav-link btn btn-outline-success mr-2" aria-current="page">Log-in</a></li>
                <li class="nav-item"><a href="#" class="nav-link btn btn-outline-primary mr-2" aria-current="page">Sign-in</a></li>
            </ul>
            
        </header>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - SoftwareShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
