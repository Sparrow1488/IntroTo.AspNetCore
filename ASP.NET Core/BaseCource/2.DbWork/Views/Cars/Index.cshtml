@model IEnumerable<Car>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Of Products table</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Cars" asp-action="Create" class="btn btn-primary">
                Add new Car
            </a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Model
                    </th>
                    <th>
                        Mark
                    </th>
                    <th>
                        Release date
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in Model)
                {
                    <tr>
                        <td width="25%">@car.Id</td>
                        <td width="25%">@car.Model</td>
                        <td width="25%">@car.Mark</td>
                        <td width="25%">@car.ReleaseDate</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Table of cars is empty</p>
    }


</div>

