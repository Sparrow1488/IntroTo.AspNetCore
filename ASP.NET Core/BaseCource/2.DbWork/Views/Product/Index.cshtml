@model IEnumerable<Product>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Of Products table</h2>
            </div>
            <div class="col-6">
                Create new Product
            </div>
        </div>
        <br />

        @if(Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Products title
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Release date
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prod in Model)
                    {
                        <tr>
                            <td width="25%">@prod.Id</td>
                            <td width="25%">@prod.Title</td>
                            <td width="25%">@prod.Price</td>
                            <td width="25%">@prod.ReleseDate</td>
                        </tr>
                    }
                </tbody>
            </table> 
        }
        else
        {
            <h2>Now products table is empty</h2>
        }

    </div>

